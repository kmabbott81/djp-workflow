{
  "title": "DJP Workflow - Golden Signals (Staging)",
  "tags": [
    "djp",
    "staging",
    "golden-signals"
  ],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (Traffic)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"djp-workflow-staging\"}[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error Rate (%)",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"djp-workflow-staging\", status_code=~\"5..\"}[5m])) by (endpoint) / sum(rate(http_requests_total{job=\"djp-workflow-staging\"}[5m])) by (endpoint) * 100",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "Error %",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                5
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "60s",
        "handler": 1,
        "name": "High Error Rate",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "id": 3,
      "title": "P50 Latency",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"djp-workflow-staging\"}[5m])) by (le, endpoint))",
          "legendFormat": "P50 - {{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "P95 Latency",
      "type": "graph",
      "gridPos": {
        "x": 8,
        "y": 8,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"djp-workflow-staging\"}[5m])) by (le, endpoint))",
          "legendFormat": "P95 - {{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                0.5
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "60s",
        "handler": 1,
        "name": "High P95 Latency",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "id": 5,
      "title": "P99 Latency",
      "type": "graph",
      "gridPos": {
        "x": 16,
        "y": 8,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"djp-workflow-staging\"}[5m])) by (le, endpoint))",
          "legendFormat": "P99 - {{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                1
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "params": [],
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "60s",
        "handler": 1,
        "name": "High P99 Latency",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "id": 6,
      "title": "Status Codes",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"djp-workflow-staging\"}[5m])) by (endpoint, status_code)",
          "legendFormat": "{{endpoint}} - {{status_code}}",
          "refId": "A"
        }
      ],
      "stack": true,
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 7,
      "title": "In-Flight Requests (Saturation)",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 6,
        "h": 8
      },
      "targets": [
        {
          "expr": "http_requests_in_flight{job=\"djp-workflow-staging\"}",
          "legendFormat": "In-flight",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Requests"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 8,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {
        "x": 18,
        "y": 16,
        "w": 6,
        "h": 8
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"djp-workflow-staging\"}",
          "legendFormat": "RSS",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 9,
      "title": "CPU Usage",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 24,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"djp-workflow-staging\"}[5m])",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percentunit",
          "label": "CPU %",
          "max": 1,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    }
  ]
}
