[phases.setup]
nixPkgs = ["python311", "pip"]

[phases.install]
cmds = [
  "pip install --no-cache-dir -r requirements.txt",
  "pip install --no-cache-dir -e ."
]

[phases.build]
cmds = ["mkdir -p /app/static && cp -r static/* /app/static/ || true"]

[start]
cmd = "uvicorn src.webapi:app --host 0.0.0.0 --port ${PORT:-8080}"
