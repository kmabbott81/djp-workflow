{
  "name": "OpenAI Agents Workflows Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/redis-server:1": {
      "version": "latest"
    }
  },

  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && pip install --no-cache-dir -e .",

  "postStartCommand": "redis-server --daemonize yes && python -m uvicorn src.webapi:app --host 0.0.0.0 --port 8000 --reload",

  "forwardPorts": [8000, 6379],

  "portsAttributes": {
    "8000": {
      "label": "FastAPI Server",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "black",
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        }
      }
    }
  },

  "remoteEnv": {
    "REDIS_URL": "redis://localhost:6379",
    "ACTIONS_ENABLED": "true",
    "TELEMETRY_ENABLED": "true",
    "PROVIDER_GOOGLE_ENABLED": "false",
    "PROVIDER_MICROSOFT_ENABLED": "false",
    "DEV_MODE": "true"
  }
}
