{
  "name": "djp-workflow",
  "displayName": "DJP Workflow Assistant",
  "description": "Run templates and DJP workflows from VS Code",
  "version": "1.0.0",
  "publisher": "djp-workflow",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "djp.runTemplate",
        "title": "DJP: Run Template on Selection"
      },
      {
        "command": "djp.quickBrief",
        "title": "DJP: Quick Brief"
      }
    ],
    "configuration": {
      "title": "DJP Workflow",
      "properties": {
        "djp.webApiBase": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL for DJP web API"
        },
        "djp.artifactsDir": {
          "type": "string",
          "default": "runs/",
          "description": "Directory for saving artifacts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.x",
    "@typescript-eslint/parser": "^5.x",
    "eslint": "^8.x",
    "typescript": "^4.9.x"
  }
}
