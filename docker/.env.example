# DJP Workflow Platform - Docker Environment Configuration
# Copy this file to ../.env and customize for your environment

# =============================================================================
# API Keys & Secrets
# =============================================================================
OPENAI_API_KEY=sk-your-key-here
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# GOOGLE_API_KEY=your-google-key-here

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# =============================================================================
# Queue & Redis Configuration
# =============================================================================
QUEUE_BACKEND=redis
REDIS_URL=redis://redis:6379/0

# Worker Settings
MAX_JOB_RETRIES=3
LEASE_HEARTBEAT_MS=15000
REQUEUE_BASE_MS=500
REQUEUE_CAP_MS=60000
REQUEUE_JITTER_PCT=0.2
RATE_LIMIT_RETRY_DELAY_MS=8000

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_PORT=8080
READINESS_TIMEOUT_MS=400
WORKER_HEALTH_FILE=/tmp/worker/heartbeat.txt

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_MULTI_REGION=false
FEATURE_BLUE_GREEN=false

# Multi-region settings (if enabled)
# REGIONS=us-east-1,us-west-2,eu-west-1
# PRIMARY_REGION=us-east-1
# CURRENT_REGION=us-east-1

# Blue/Green deployment settings (if enabled)
# DEPLOY_RBAC_ROLE=Deployer

# =============================================================================
# Paths & Storage
# =============================================================================
ORCH_EVENTS_PATH=logs/orchestrator_events.jsonl
ARTIFACTS_DIR=artifacts
AUDIT_DIR=audit
LOGS_DIR=logs

# Cloud Storage (optional)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_REGION=us-east-1
# S3_BUCKET=djp-artifacts

# GCS (optional)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BUCKET=djp-artifacts

# =============================================================================
# Build Metadata (for production deployments)
# =============================================================================
# BUILD_VERSION=1.0.0
# GIT_SHA=abc123def
# BUILD_DATE=2025-10-04
